<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MauiApp1"
             x:Class="MauiApp1.DoporucenaCetba">

    <Grid RowDefinitions="Auto,*">

        <!-- Status bar s poÄtem vybranÃ½ch knih -->
        <StackLayout BackgroundColor="LightGray" Padding="10" Grid.Row="0">
            <Label Text="{Binding SelectionStatus}" 
                   FontSize="16" 
                   TextColor="Red"
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" />
        </StackLayout>

        <CollectionView ItemsSource="{Binding BookCategories}" SelectionMode="None" Grid.Row="1">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="10" Spacing="10">
                        <Label Text="{Binding CategoryName}" 
                               TextColor="WhiteSmoke" 
                               FontSize="20" 
                               FontAttributes="Bold" />

                        <CollectionView ItemsSource="{Binding Books}" SelectionMode="None">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame Padding="5"
                                           CornerRadius="10"
                                           BorderColor="LightGray"
                                           HasShadow="True"
                                           Margin="0,5">
                                        <Frame.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding ToggleSelectionCommand}" />
                                        </Frame.GestureRecognizers>

                                        <HorizontalStackLayout Spacing="10">
                                            <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" 
                                                      IsEnabled="{Binding IsEnabled}"
                                                      CheckedChanged="OnBookCheckedChanged" />

                                            <Label Text="{Binding Title}"
                                                   FontSize="14" 
                                                   VerticalOptions="Center"
                                                   LineBreakMode="WordWrap"
                                                   MaxLines="10"
                                                   WidthRequest="310"/>
                                        </HorizontalStackLayout>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- KulatÃ© tlaÄÃ­tko pro generovÃ¡nÃ­ PDF -->
        <Button Clicked="OnGeneratePdfClicked"
                WidthRequest="60"
                HeightRequest="60"
                CornerRadius="30"
                BackgroundColor="DodgerBlue"
                TextColor="White"
                FontSize="24"
                Grid.Row="1"
                HorizontalOptions="End"
                VerticalOptions="End"
                Margin="20">
            <Button.ImageSource>
                <FontImageSource Glyph="ðŸ“„" Size="30" Color="White"/>
            </Button.ImageSource>
        </Button>

    </Grid>
</ContentPage>
