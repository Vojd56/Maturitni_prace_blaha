<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MauiApp1"
             x:Class="MauiApp1.DoporucenaCetba">

    <Grid RowDefinitions="Auto,*">

        <!-- Status bar s po캜tem vybran칳ch knih -->
        <StackLayout BackgroundColor="LightGray" Padding="10" Grid.Row="0">
            <Label Text="{Binding SelectionStatus}" 
                   FontSize="16" 
                   TextColor="Red"
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" />
        </StackLayout>

        <!-- Hlavn칤 kolekce pro knihy a jejich kategorie -->
        <CollectionView ItemsSource="{Binding BookCategories}" SelectionMode="None" Grid.Row="1">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="10" Spacing="10">
                        <!-- N치zev kategorie -->
                        <Label Text="{Binding CategoryName}" 
                               TextColor="#038DA0" 
                               FontSize="20" 
                               FontAttributes="Bold" />

                        <!-- Seznam knih v r치mci kategorie -->
                        <CollectionView ItemsSource="{Binding Books}" SelectionMode="None">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame Padding="5"
                                           CornerRadius="10"
                                           BorderColor="#4DADBD"
                                           HasShadow="True"
                                           Margin="0,5">
                                        <!-- Gesture recognizer pro reakci na kliknut칤 -->
                                        <Frame.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding ToggleSelectionCommand}" />
                                        </Frame.GestureRecognizers>

                                        <!-- Horizont치ln칤 layout pro zobrazen칤 checkboxu a n치zvu knihy -->
                                        <HorizontalStackLayout Spacing="10">
                                            <!-- Checkbox pro v칳b캩r knihy -->
                                            <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" 
                                                      IsEnabled="{Binding IsEnabled}" 
                                                      CheckedChanged="OnBookCheckedChanged" />

                                            <!-- Text s n치zvem knihy -->
                                            <Label Text="{Binding Title}"
                                                   FontSize="14" 
                                                   VerticalOptions="Center"
                                                   LineBreakMode="WordWrap"
                                                   MaxLines="10"
                                                   WidthRequest="310"/>
                                        </HorizontalStackLayout>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Kulat칠 tla캜칤tko pro generov치n칤 PDF -->
        <Button Clicked="OnGeneratePdfClicked"
                WidthRequest="60"
                HeightRequest="60"
                CornerRadius="30"
                BackgroundColor="DodgerBlue"
                TextColor="White"
                FontSize="24"
                Grid.Row="1"
                HorizontalOptions="End"
                VerticalOptions="End"
                Margin="20">
            <!-- Ikona pro tla캜칤tko -->
            <Button.ImageSource>
                <FontImageSource Glyph="游늯" Size="30" Color="#038DA0"/>
            </Button.ImageSource>
        </Button>

    </Grid>
</ContentPage>
